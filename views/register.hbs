<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="email">Email (必填)</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password (必填)</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password"
            value="{{password}}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">confirm Password (必填)</label>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
            placeholder="Enter confirmPassword" value="{{confirmPassword}}">
        </div>
        <button type="submit" class="btn btn-info btn-block mt-2">Register</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-3">
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>