{{!-- Form --}}
<div class="form" style="width:50%;margin:2em auto;">
  <div class="card card-body" style="background-color:#ffb0ce;">
    <form action='/restaurants/{{restaurant._id}}?_method=PUT' method="POST">
      <div class="form-group">
        {{> message}}
        <label for="image">餐廳圖片</label>
        <input type="url" class="form-control" id="name" placeholder="ex: https...jpg" name="image"
          value="{{restaurant.image}}">
      </div>
      <div class="form-group">
        <label for="name">餐廳名稱(中文)</label>
        <input type="text" class="form-control" id="name" placeholder="ex: 麥當勞" name="name" value="{{restaurant.name}}">
      </div>
      <div class="form-group">
        <label for="name_en">餐廳名稱(英文)</label>
        <input type="text" class="form-control" id="name_en" placeholder="ex: McDonald" name="name_en"
          value="{{restaurant.name_en}}">
      </div>
      <div class="form-group">
        <label for="category">餐廳分類</label>
        <select class="form-control" id="category" name="category">
          <option style="display:none">{{restaurant.category}}</option>
          <option>義式餐廳</option>
          <option>日本料理</option>
          <option>美式</option>
          <option>中東料理</option>
          <option>咖啡</option>
          <option>酒吧</option>
        </select>
      </div>
      <div class="form-group">
        <label for="location">餐廳地址</label>
        <input type="text" class="form-control" id="location" placeholder="ex: 我家巷口" name="location"
          value="{{restaurant.location}}">
      </div>
      <div class="form-group">
        <label for="phone">聯絡電話</label>
        <input type="tel" class="form-control" id="phone" placeholder="ex: 02-2222-8888" name="phone"
          value="{{restaurant.phone}}">
      </div>
      <div class="form-group">
        <label for="google_map">Google地圖</label>
        <input type="url" class="form-control" id="phone" placeholder="ex: https://goo.gl/maps/..." name="google_map"
          value="{{restaurant.google_map}}">
      </div>
      <div class="form-group">
        <label for="rating">評價(最高5分，最低0分)</label>
        <input type="number" class="form-control" id="rating" placeholder="ex: 4.5" name="rating" max="5" min='0'
          step="0.1" value="{{restaurant.rating}}">
      </div>
      <div class="form-group">
        <label for="description">餐廳簡介</label>
        <textarea class="form-control" id="description" name="description"
          rows="3">{{restaurant.description}}</textarea>
      </div>
      {{!-- Save Button --}}
      <button type="submit" class="btn btn-success" style="color:white;font-family: 'Balsamiq Sans', cursive;">Save
      </button>
      {{!-- Back Link --}}
      <a href="/" class="btn btn-warning"
        style="text-decoration:none;color:black;font-family: 'Balsamiq Sans', cursive;">Back</a>
    </form>
  </div>
</div>