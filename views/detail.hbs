<div class="row">
  {{!-- Image --}}
  <img src="{{ restaurant.image }}" class="col-sm-6">
  {{!-- Detail info --}}
  <div class="col-sm-6">
    {{!-- Info --}}
    <h1>{{ restaurant.name}}</h1>
    <h2>{{ restaurant.name_en}}</h2>
    <h6 class="res-category"><i class="fas fa-utensils"
        style="color:deeppink; margin-right:1em;"></i>{{restaurant.category}}
    </h6>
    <h6 class="res-location"><i class="fas fa-store"
        style="color:deeppink; margin-right:1em;"></i>{{restaurant.location}}
    </h6>
    <h6 class="res-phone"><i class="fas fa-phone" style="color:deeppink; margin-right:1em;"></i>{{restaurant.phone}}
    </h6>
    <h6 class="res-google-map"><i class="fas fa-map-marker-alt" style="color:deeppink; margin-right:1em;"></i><a
        href="{{restaurant.google_map}}">{{restaurant.google_map}}</a>
    </h6>
    <h6 class="res-rating"><i class="fas fa-star" style="color:deeppink; margin-right:1em;"></i>{{restaurant.rating}}
    </h6>
    <p class="res-description"><i class="fas fa-comment"
        style="color:deeppink; margin-right:1em;"></i>{{restaurant.description}}
    </p>

    {{!-- Edit Link --}}
    <a class="btn btn-success" href="/restaurants/{{restaurant._id}}/edit"
      style="text-decoration:none;color:white;font-family: 'Balsamiq Sans', cursive;">edit</a>

    {{!-- Delete Button --}}
    <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display:inline">
      <button type="submit" class="btn btn-danger" style="font-family: 'Balsamiq Sans', cursive;"
        onclick="return confirmDelete()">delete</button>
    </form>

    {{!-- Back Link --}}
    <a class="btn btn-warning" href="/"
      style="text-decoration:none;color:black;font-family: 'Balsamiq Sans', cursive;">Back</a>
  </div>
</div>

<script>
  function confirmDelete() {
    if (confirm('確定要刪除嗎?')) return true
    return false
  }
</script>